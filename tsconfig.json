{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "importHelpers": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    },
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015.promise",
      "dom",
      "scripthost",
      "es5"
    ],
    "rootDirs": [
      "./src"
    ]
  },
  "typeRoots": [
    "./node_modules/@types/",
    "./types"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./monaco-types"
  ]
}